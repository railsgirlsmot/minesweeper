<div class="row games-index">
  <div class="col-md-4 main-section">
    <%= link_to 'New Game', new_game_path, class: "btn btn-primary btn-lg" %>
  </div>
  <div class="col-md-8 main-section">
    <h2 class="game-list-heading">Games List</h2>
    <ul class="game-list">
      <% @games.each do |game| %>
        <li><%= link_to game.name, game %></li>
      <% end %>
    </ul>
  </div>
</div>